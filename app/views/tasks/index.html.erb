<h1>To-do List</h1>
<ul>
<% @tasks.each do |task| %>
  <li>
    <% if task.completed? %>
      <i class="fa-solid fa-square-check"></i>
    <%else%>
      <i class="fa-regular fa-square-check"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
  </li>
<% end %>
</ul>

<p><%= link_to "Create a new task", new_task_path %></p>
