<div class="main-container">
  <div class="d-flex justify-content-between">
    <h1><%= @task.title %></h1>
    <div><%= link_to "Edit", edit_task_path(@task) %>
    </div>
  </div>
  <p class="alert alert-secondary" role="alert"><%= @task.details %></p>
   <% if @task.completed? %>
    <div class="d-flex"><i class="fa-solid fa-square-check"></i><p>This task is completed</p></div>
    <%else%>
    <div class="d-flex align-items-center"><i class="fa-regular fa-square"></i><p class="m-0 pl-3">This task is not yet completed</p></div>
    <% end %>

  <div>
    <%= link_to "Back to list", tasks_path %>
  </div>
</div>
