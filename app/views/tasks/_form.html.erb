<div class="d-flex flex-column">
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <% unless f.object.new_record? %>
<%# could also write above line as @task.new_record? %>
      <%= f.label :completed %>
      <%= f.check_box :completed %>
    <% end  %>
    <%= f.submit %>
  <% end %>
</div>
